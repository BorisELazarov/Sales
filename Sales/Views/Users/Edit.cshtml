@model Sales.ViewModels.Users.EditVM;
@{
    this.Layout = "/Views/Shared/_Site.cshtml";
    ViewData["title"] = "EDIT USER";
}

<fieldset>
    <legend>EDIT USER</legend>
    <form action="/Users/Edit" method="post">
        <div class="grid">
            @Html.HiddenFor(m=>m.Id)
            <div class="row">
                <div class="col-1">@Html.LabelFor(m=>m.Username)</div>
                <div class="col-2">
                    @Html.TextBoxFor(m=>m.Username)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m=>m.Username)
                </div>
            </div>
            <div class="row">
                <div class="col-1">@Html.LabelFor(m=>m.Password)</div>
                <div class="col-2">
                    @Html.TextBoxFor(m=>m.Password)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m=>m.Password)
                </div>
            </div>
            <div class="row">
                <div class="col-1">@Html.LabelFor(m=>m.FirstName)</div>
                <div class="col-2">
                    @Html.TextBoxFor(m=>m.FirstName)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m=>m.FirstName)
                </div>
            </div>
            <div class="row">
                <div class="col-1">@Html.LabelFor(m=>m.LastName)</div>
                <div class="col-2">
                    @Html.TextBoxFor(m=>m.LastName)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m=>m.LastName)
                </div>
            </div>
            <div class="row">
                <div class="col-1"></div>
                <div class="col-2">
                    <input type="submit" class="right" value="Edit" />
                    <a class="right" href="/Users/Index">Back</a>
                </div>
            </div>
        </div>
    </form>
</fieldset>


